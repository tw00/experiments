{
  "compilerOptions": {
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "strict": false,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "tests"]
}
